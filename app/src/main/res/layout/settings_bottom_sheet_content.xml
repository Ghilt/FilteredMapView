<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_sheet_handle_drawable"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/bottom_sheet_content_description_expand_handle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccentWhite"
        android:text="@string/settings_title"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/bottom_sheet_settings_margin"/>

    <SeekBar
        android:id="@+id/bottom_sheet_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginBottom="@dimen/bottom_sheet_settings_margin"/>
</LinearLayout>
